// --- Fim dos Prot√≥tipos ---

// üßπ Fun√ß√£o auxiliar para "limpar" a tela
void limparTela() {
    #ifdef _WIN32
        system("cls");
    #else
        // Para sistemas Unix/Linux/macOS
        system("clear");
    #endif
    printf("--- üéí GERENCIAMENTO AVANCADO DE MOCHILA (N√≠vel Mestre) ---\n");
}

// üñ•Ô∏è Fun√ß√£o para exibir o menu
void exibirMenu() {
    const char* status_ordenacao;
    
    // Converte o booleano para string para exibi√ß√£o
    if (ordenadaPorNome) {
        status_ordenacao = "ORDENADA";
    } else {
        status_ordenacao = "NAO ORDENADA";
    }

    printf("\n--- STATUS GERAL ---\n");
    printf("Itens na Mochila: %d/10 | Ordena√ß√£o por Nome: %s\n", numItens, status_ordenacao);
    printf("--------------------\n");
    printf("\n");
    printf("1. Adicionar um item\n");
    printf("2. Remover um item\n");
    printf("3. Listar todos os itens\n");
    printf("4. Menu de Ordena√ß√£o (Crit√©rios)\n");
    printf("5. Realizar Busca Bin√°ria (por Nome)\n");
    printf("0. Sair\n");
}

// ‚ûï Fun√ß√£o para adicionar um novo item √† mochila
void inserirItem() {
    // 1. Verifica√ß√£o de Capacidade
    if (numItens >= 10) {
        printf("\n‚ùå Mochila cheia! Capacidade m√°xima atingida (10 itens).\n");
        printf("Pressione ENTER para retornar ao menu...");
        while (getchar() != '\n'); 
        getchar();
        return; 
    }

    // Ponteiro para o novo item na pr√≥xima posi√ß√£o livre (√≠ndice numItens)
    Item *novo_item = &mochila[numItens]; 

    printf("\n--- CADASTRO DE NOVO ITEM ---\n");

    // 2. Leitura dos Dados (Usando scanf com largura para seguran√ßa)
    printf("1. Nome do Item (max 29 caracteres): ");
    scanf("%29s", novo_item->nome); 
    while (getchar() != '\n'); 

    printf("2. Tipo (ex: arma, muni√ß√£o, cura): ");
    scanf("%19s", novo_item->tipo);
    while (getchar() != '\n');

    printf("3. Quantidade (valor inteiro): ");
    if (scanf("%d", &novo_item->quantidade) != 1) {
        printf("\n‚ö†Ô∏è Entrada inv√°lida para quantidade. Item n√£o adicionado.\n");
        while (getchar() != '\n');
        getchar();
        return;
    }
    
    printf("4. Prioridade (1 a 5): ");
    if (scanf("%d", &novo_item->prioridade) != 1) {
        printf("\n‚ö†Ô∏è Entrada inv√°lida para prioridade. Item n√£o adicionado.\n");
        while (getchar() != '\n');
        getchar();
        return;
    }

    // 3. Atualizar as vari√°veis de controle
    numItens++;
    ordenadaPorNome = false; 

    // 4. Pausar para visualiza√ß√£o
    printf("\n‚úÖ Item '%s' adicionado com sucesso!\n", novo_item->nome);
    printf("Pressione ENTER para retornar ao menu...");
    while (getchar() != '\n'); 
    getchar(); 
}

// üìú Fun√ß√£o para listar todos os itens na mochila
void listarItens() {
    printf("\n--- INVENT√ÅRIO ATUAL DA MOCHILA ---\n");
    
    // 1. Verifica√ß√£o de Vazio
    if (numItens == 0) {
        printf("\nüö´ Mochila vazia. Nenhum item cadastrado.\n");
    } else {
        // Cabe√ßalho da Tabela
        printf("+------------------------------+--------------------+-----------+----------+\n");
        printf("| Nome                         | Tipo               | QTD       | Priorid. |\n");
        printf("+------------------------------+--------------------+-----------+----------+\n");

        // 2. Percorrendo o Vetor
        for (int i = 0; i < numItens; i++) {
             // %-N s/d garante alinhamento √† esquerda e largura fixa
             printf("| %-30s | %-18s | %-9d | %-8d |\n", 
                    mochila[i].nome, mochila[i].tipo, mochila[i].quantidade, mochila[i].prioridade);
        }
        
        // Fim da Tabela
        printf("+------------------------------+--------------------+-----------+----------+\n");
    }

    // Pausa para visualiza√ß√£o
    printf("\nPressione ENTER para retornar ao menu...");
    while (getchar() != '\n'); 
    getchar();
}

// --- Fun√ß√µes Pendentes (apenas defini√ß√µes vazias para compila√ß√£o) ---

// ‚ûñ Fun√ß√£o placeholder para a Remo√ß√£o de itens
void removerItem() {
    printf("\n‚ö†Ô∏è Op√ß√£o 2 - Remover Item: A fun√ß√£o ainda n√£o est√° implementada. Pressione ENTER...");
    while (getchar() != '\n');
    getchar();
}

// ‚öôÔ∏è Fun√ß√£o placeholder para o Menu de Ordena√ß√£o
